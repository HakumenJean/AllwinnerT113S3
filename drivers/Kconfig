	bool "Enable USB1 HOST"
	select PKG_USING_CHERRYUSB
	select PKG_CHERRYUSB_HOST
	select PKG_CHERRYUSB_HOST_CUSTOM
	select PKG_CHERRYUSB_HOST_MSC
	default n
	help
		Select CherryUSB HSOT IP SUSTOM

