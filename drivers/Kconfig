menu "Hardware Drivers Config"

config BSP_CHIP_T113
    bool 
    select ARCH_ARM
    select RT_USING_CPU_FFS
    select ARCH_ARM_CORTEX_A
    select RT_USING_COMPONENTS_INIT
    select RT_USING_USER_MAIN
    select RT_USING_GIC_V2
    select ARCH_ARM_CORTEX_A7
    default y
    
config RT_USING_FPU
	bool "Enable Hardware FPU"
	default n
	help
		need select fpu flags and open this config

menu "UART"

config BSP_USING_UART0
    bool "Enable UART0"
    select RT_USING_SERIAL
    default n

config BSP_USING_UART1
    bool "Enable UART1"
    select RT_USING_SERIAL
    default n

config BSP_USING_UART2
    bool "Enable UART2"
    select RT_USING_SERIAL
    default n

config BSP_USING_UART3
    bool "Enable UART3"
    select RT_USING_SERIAL
    default y
    
config BSP_USING_UART4
    bool "Enable UART4"
    select RT_USING_SERIAL
    default n
    
config BSP_USING_UART5
    bool "Enable UART5"
    select RT_USING_SERIAL
    default n

endmenu

menu "SPI"

config BSP_USING_SPI0
    bool "Enable SPI0"
    select RT_USING_SPI
    default y
    
config BSP_USING_SPI1
    bool "Enable SPI1"
    select RT_USING_SPI
    default y
    
menuconfig BSP_USING_SPI_FLASH
	bool "Enable SPI Flash"
	select BSP_USING_SPI0
	select RT_USING_SFUD
	default y
	
if 	BSP_USING_SPI_FLASH
	
config SPI_FLASH_CHIP_NAME
	string "Chip name for spi flash"
	default "gd25qxx"

endif

endmenu

