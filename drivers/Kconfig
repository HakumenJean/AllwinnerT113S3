menuconfig BSP_USING_I2C
    bool "Enable I2C"
    select RT_USING_I2C
    default n
    
if BSP_USING_I2C
	config BSP_USING_I2C0
	bool "Enable I2C0"
	default n
	
	config BSP_USING_I2C1
		bool "Enable I2C1"
		default n
	
	config BSP_USING_I2C2
		bool "Enable I2C2"
		default n
		
	config BSP_USING_I2C3
		bool "Enable I2C3"
		default n
endif

menuconfig BSP_USING_TOUCH
    bool "TOUCH"
    select RT_USING_TOUCH
    select RT_TOUCH_PIN_IRQ
    default n

if BSP_USING_TOUCH
    choice
        prompt"select touch driver"
        default BSP_USING_TOUCH_TP
        
        config BSP_USING_TOUCH_GT9XX
            bool "use gt9xx touch driver"
        config BSP_USING_TOUCH_TP
            bool "use hardware tp touch driver"
    endchoice
    
    if BSP_USING_TOUCH_GT9XX
	
		config GT9XX_I2C_BUS_NAME
			string "I2c bus name for gt9xx"
			default "i2c2"
	
	endif
endif

config BSP_USING_LCD
    bool "Enable LCD"
    default n

menuconfig BSP_USING_RTC
    bool "Enable RTC"
    select RT_USING_RTC
    default n
    
if BSP_USING_RTC

    choice
        prompt"select rtc driver"
        default BSP_USING_RTC_DS1307
        
        config BSP_USING_RTC_DS1307
            bool "use ds1307 rtc driver"
        config BSP_USING_RTC_SUNXI
            bool "use hardware rtc driver"
    endchoice

endif

config BSP_USING_ETH
	bool "Enable Ethernet"
	select RT_USING_LWIP
	default n

config BSP_USING_PWM
    bool "Enable PWM"
    select RT_USING_PWM
    default n
    
config BSP_USING_CE
	bool "Enable Crypto Engine"
	default n

endmenu
